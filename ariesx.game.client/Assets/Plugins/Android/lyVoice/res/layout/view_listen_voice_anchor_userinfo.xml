<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_listen_voice_layout2"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_below="@+id/rl_listen_voice_layout1">

    <ImageView
        android:id="@+id/tv_listen_voice_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="20.5dp" />

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_border" />
    
    <ImageView
        android:id="@+id/tv_listen_voice_vip_log"
        android:visibility="gone"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/vip_logo"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="43dp"
        />

    <LinearLayout
        android:id="@+id/ll_listen_voice_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/listen_voice_closevoice_layout"
        android:layout_toRightOf="@+id/tv_listen_voice_avatar"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_listen_voice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/listen_voice_name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_listen_voice_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ilong_chat_shape_corner_listen_level"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/listen_voice_level"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_listen_voice_info"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/listen_voice_closevoice_layout"
        android:layout_toRightOf="@+id/tv_listen_voice_avatar"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/liveroom_listen" />

        <TextView
            android:id="@+id/tv_listen_voice_listen_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text=""
            android:textColor="@color/listen_voice_listen_num"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:src="@drawable/liveroom_collect" />

        <TextView
            android:id="@+id/tv_listen_voice_star_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text=""
            android:textColor="@color/listen_voice_listen_num"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:src="@drawable/liveroom_love" />

        <TextView
            android:id="@+id/tv_listen_voice_love_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/listen_voice_listen_num"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/tv_listen_voice_love_info"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:src="@drawable/liveroom_info" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/listen_voice_closevoice_layout"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:visibility="gone">

        <ImageView
            android:layout_marginTop="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/live_mic_onoff_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.lyvoice.widget.StrokeTextViewBtn
                android:id="@+id/tv_listen_voice_closevoice_btn"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:background="@drawable/collect_btn"
                android:gravity="center"
                android:text="@string/close_voice"
                android:textColor="@color/tab_title"
                android:textSize="11sp"
                android:visibility="visible" />
            <com.lyvoice.widget.StrokeTextViewBtn
                android:id="@+id/tv_listen_voice_openvoice_btn"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="@string/open_voice"
                android:background="@color/ilong_chat_transparent"
                android:textColor="@color/tab_title"
                android:textSize="11sp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12.5dp"
        android:background="@color/main_line" />


</RelativeLayout>