<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/rl_listen_voice_layout3"
    android:layout_below="@+id/rl_listen_voice_layout2">

    <TextView
        android:id="@+id/tv_listen_voice_signature_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ilong_chat_shape_corner_create_tv"
        android:gravity="center"
        android:text="中文"
        android:textColor="@color/listen_voice_collect_btn"
        android:textSize="10sp" />

    <com.lyvoice.widget.MarqueeTextView
        android:id="@+id/tv_listen_voice_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:text="岁月，只管泼墨。。。。。"
        android:textColor="@color/listen_voice_singature"
        android:textSize="12sp" />


</LinearLayout>