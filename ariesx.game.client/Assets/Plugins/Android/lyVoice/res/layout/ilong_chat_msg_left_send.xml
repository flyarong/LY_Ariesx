<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="5.5dp"
        android:layout_marginRight="2.5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ilong_chat_anchor_default_img"
        android:id="@+id/iv_chat_img"
        />
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_border" />

    <ImageView
        android:id="@+id/iv_chat_msg_vip"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:src="@drawable/vip_logo"
        android:layout_marginTop="28dp"
        />

    <TextView
        android:id="@+id/tv_chat_msg_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/iv_chat_img"
        android:singleLine="true"
        android:textColor="@color/item_anchor_language"
        android:layout_marginRight="4dp"
        android:text="木有更多了"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_chat_msg_content"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@+id/iv_chat_img"
        android:layout_below="@+id/tv_chat_msg_name"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:textColor="@color/ilong_text_msg"
        android:textSize="9sp"
        android:text="我是内容内容"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp"
        android:background="@drawable/chat_msg_right_new"
        android:layout_height="wrap_content" />
</RelativeLayout>