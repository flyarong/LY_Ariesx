<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="50dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">
    
    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:id="@+id/iv_chat_img"
        android:layout_marginLeft="0.5dp"
        android:layout_marginTop="0.5dp"
        android:src="@drawable/ilong_chat_anchor_default_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/img_border" />

    <ImageView
        android:id="@+id/iv_chat_msg_vip"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/vip_logo"
        android:visibility="gone"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="23dp"
        />

    <TextView
        android:id="@+id/tv_chat_msg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="@color/ilong_text_title"
        android:text=""
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tv_chat_msg_content"
        android:layout_alignStart="@+id/tv_chat_msg_content" />

    <TextView
        android:id="@+id/tv_chat_msg_content"
        android:layout_width="wrap_content"
        android:textColor="@color/ilong_text_msg"
        android:layout_toRightOf="@+id/iv_chat_img"
        android:layout_below="@+id/tv_chat_msg_name"
        android:textSize="9sp"
        android:layout_marginLeft="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:background="@drawable/chat_msg_left_background"
        android:layout_height="wrap_content" />
</RelativeLayout>