<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_item_collect"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_item_collect_avatar"
            android:layout_width="42dp"
            android:layout_gravity="center"
            android:layout_height="42dp" />

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:src="@drawable/img_border" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_item_collect_vip_log"
        android:layout_width="20dp"
        android:visibility="gone"
        android:layout_height="20dp"
        android:src="@drawable/vip_logo"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="26dp"
        />
    
    <TextView
        android:layout_below="@+id/fl_item_collect"
        android:id="@+id/tv_item_collect_name"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/item_anchor_name"
        android:textSize="9dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:layout_toRightOf="@+id/fl_item_collect"
        />

</RelativeLayout>