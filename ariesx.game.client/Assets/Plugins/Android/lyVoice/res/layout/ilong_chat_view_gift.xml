<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/animation_person_rl"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="left"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/love_show_background">


        <TextView
            android:id="@+id/gift_usernickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1231"
            android:textColor="#333333"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/gift_send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="送了"
            android:layout_toRightOf="@id/gift_usernickname_tv"
            android:textColor="#333333"
            android:textSize="11sp" />


        <ImageView
            android:id="@+id/animation_gift"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/gift_send_text"
            android:src="@drawable/liveroom_love" />

        <LinearLayout
            android:id="@+id/animation_num_layout"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/animation_gift"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#ff8d27"
                android:textSize="13sp" />
            <TextView
                android:id="@+id/animation_num"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textStyle="bold"
                android:text="3"
                android:typeface="serif"
                android:textColor="#ff8d27"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>





</FrameLayout>