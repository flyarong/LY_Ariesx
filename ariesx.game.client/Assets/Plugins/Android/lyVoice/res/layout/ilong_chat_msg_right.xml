<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_chat_msg_level"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ilong_chat_shape_corner_msg_level"
        android:paddingBottom="1dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="Lv.10"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_chat_msg_name"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:gravity="center"
        android:textSize="12sp"
        android:singleLine="true"
        android:textColor="@color/item_anchor_language"
        android:layout_toLeftOf="@+id/tv_chat_msg_level"
        android:layout_marginRight="15dp"
        android:text="木有更多了"
        />

    <TextView
        android:id="@+id/tv_chat_msg_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_chat_msg_level"
        android:layout_marginTop="5dp"
        android:textColor="@color/ilong_text_title"
        android:textSize="14sp"
        android:text="我是内容内容"
        android:gravity="right"
        android:padding="10dp"
        android:background="@drawable/ilong_chat_shape_corner_msg_right_text"
        android:layout_height="wrap_content" />
</RelativeLayout>